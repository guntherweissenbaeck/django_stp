#!/bin/bash

# CREATE DATABASE DUMP OF DB_FBF.
docker exec django_stp_db_1 /bin/bash -c "/usr/local/bin/pg_dump -U fbf -d db_fbf > /backup/fbf-backup.sql"

# COPY AND COMPRESS DUMP FILE.
docker exec django_stp_db_1 /bin/bash -c "cd /backup && /bin/tar -czvf fbf-backup__$(date '+%Y-%m-%d').tar.gz fbf-backup.sql"
